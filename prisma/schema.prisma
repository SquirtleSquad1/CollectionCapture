model User {
  id       String @id @default(uuid())
  username String @unique
  password String
  cards    Collection[]
}

model Card {
  id       Int    @id @default(autoincrement())
  name     String @unique
  imageUrl String @unique
  users    Collection[]
}

model Collection {
  user User @relation(fields: [userId], references:[id])
  userId String
  card Card @relation(fields: [cardId], references:[id])
  cardId Int

  @@id([userId, cardId])
}
